#include "module_max7219.h"
/*====================================================================================================*/
/*====================================================================================================*/
/* Arduino Uno Board define */
const byte LED = 13;
/*====================================================================================================*/
/*====================================================================================================*/
void setup ()
{
  pinMode(LED, OUTPUT);
  digitalWrite(LED, LOW);

  MAX7219_Init();
  MAX7219_Init();

  MAX7219_TestMatrixLED();
}
/*====================================================================================================*/
/*====================================================================================================*/
void loop ()
{
  digitalWrite(LED, HIGH);
  delay(200);
  digitalWrite(LED, LOW);
  delay(200);

  MAX7219_WriteData(1, 0x80*1 + 0x40*1 + 0x20*1 + 0x10*0 + 0x08*0 + 0x04*1 + 0x02*1 + 0x01*1);
  MAX7219_WriteData(2, 0x80*1 + 0x40*1 + 0x20*0 + 0x10*0 + 0x08*0 + 0x04*0 + 0x02*1 + 0x01*1);
  MAX7219_WriteData(3, 0x80*1 + 0x40*0 + 0x20*0 + 0x10*1 + 0x08*1 + 0x04*0 + 0x02*0 + 0x01*1);
  MAX7219_WriteData(4, 0x80*0 + 0x40*0 + 0x20*1 + 0x10*1 + 0x08*1 + 0x04*1 + 0x02*0 + 0x01*0);
  MAX7219_WriteData(5, 0x80*0 + 0x40*0 + 0x20*1 + 0x10*1 + 0x08*1 + 0x04*1 + 0x02*0 + 0x01*0);
  MAX7219_WriteData(6, 0x80*1 + 0x40*0 + 0x20*0 + 0x10*1 + 0x08*1 + 0x04*0 + 0x02*0 + 0x01*1);
  MAX7219_WriteData(7, 0x80*1 + 0x40*1 + 0x20*0 + 0x10*0 + 0x08*0 + 0x04*0 + 0x02*1 + 0x01*1);
  MAX7219_WriteData(8, 0x80*1 + 0x40*1 + 0x20*1 + 0x10*0 + 0x08*0 + 0x04*1 + 0x02*1 + 0x01*1);
}
